# ============================================
# Application Settings
# ============================================
APP_NAME=OSINT Autonomous Analyst
VERSION=0.1.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ============================================
# Database Configuration
# ============================================

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=osint_secure_password_change_me

# TimescaleDB
TIMESCALE_HOST=timescaledb
TIMESCALE_PORT=5432
TIMESCALE_USER=osint
TIMESCALE_PASSWORD=osint_timescale_password_change_me
TIMESCALE_DB=osint_temporal

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# Weaviate
WEAVIATE_URL=http://weaviate:8080

# Redis
REDIS_URL=redis://:osint_redis_password_change_me@redis:6379/0

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=osint_admin
MINIO_SECRET_KEY=osint_minio_password_change_me

# ============================================
# LLM Configuration
# ============================================

# Option 1: Paid APIs (Claude or OpenAI)
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: FREE - Ollama (local, no API key needed)
# Install Ollama from https://ollama.ai then run: ollama pull llama3:8b
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# Option 3: FREE - Groq (get free API key at https://console.groq.com)
GROQ_API_KEY=your_free_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# ============================================
# Collection Agent API Keys (Optional)
# ============================================
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
SHODAN_API_KEY=your_shodan_api_key
CENSYS_API_ID=your_censys_api_id
CENSYS_API_SECRET=your_censys_api_secret

# Telegram (get from https://my.telegram.org)
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash

# ============================================
# Security
# ============================================
SECRET_KEY=change_this_to_secure_random_string_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# ============================================
# Feature Flags
# ============================================
ENABLE_DENIED_ACTION_LOGGING=true
ENABLE_HYPOTHESIS_GENERATION=true
ENABLE_DARK_WEB_COLLECTION=false
ENABLE_GEOSPATIAL_ANALYTICS=true

